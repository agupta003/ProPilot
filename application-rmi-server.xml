<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd" >
<beans>
	<!-- s9.topic1: Remoting  -->
	<bean id="calendarServiceServer"
		class="com.itservicesone.training.spring.s9.topic1.remoting.CalendarServiceImpl" />

	<bean class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="service">
			<ref bean="calendarServiceServer" />
		</property>
		<property name="serviceName">
			<value>CalendarService</value>
		</property>
		<property name="serviceInterface">
			<value>com.itservicesone.training.spring.s9.topic1.remoting.ICalendarService</value>
		</property>
	</bean>
</beans>
